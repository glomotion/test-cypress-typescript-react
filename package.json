{
  "name": "@imtbl/design-system",
  "version": "0.0.1",
  "description": "A repository to house all design system components utilised inside of IMX GUI",
  "main": "index.js",
  "repository": "git@github.com:immutable/imx-design-system.git",
  "author": "Tim Paul <tim.paul@immutable.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "npm": ">=6.14.8",
    "node": ">=12.18.4"
  },
  "scripts": {
    "start:demo": "webpack-dev-server --config ./internals/webpack/webpack.demo.config.js",
    "prebuild:lib": "rm -rf dist/",
    "build:lib": "webpack --config ./internals/webpack/webpack.lib.config.js",
    "lint": "npm run typecheck && npm run lint:css && npm run lint:eslint .",
    "lint:css": "stylelint './src/**/*.{js,ts,tsx}'",
    "lint:eslint:quiet": "eslint --ext .ts,.tsx,.js,.jsx --quiet",
    "lint:eslint": "eslint --ext .ts,.tsx,.js,.jsx",
    "lint:eslint:fix": "eslint --ext .ts,.tsx,.js,.jsx --quiet --fix",
    "typecheck": "tsc --noEmit",
    "pretest": "npm run test:clean && npm run lint",
    "test:clean": "rimraf ./coverage",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:cypress:open": "cypress open",
    "test:cypress:run": "cypress run",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run lint:eslint:fix",
      "git add --force"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add --force"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged && npm run typecheck"
    }
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "emoji-regex": "^9.2.2",
    "emotion": "^10.0.27",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "@types/react-test-renderer": "^16.9.3",
    "@types/testing-library__jest-dom": "5.9.4",
    "@types/webpack": "^4.41.22",
    "@types/webpack-env": "^1.15.3",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-emotion": "^10.0.33",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^4.3.0",
    "cypress": "^5.3.0",
    "cypress-react-unit-test": "^4.16.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^11.0.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "html-webpack-plugin": "^4.5.0",
    "husky": "4.3.0",
    "jest": "^26.5.3",
    "jest-cli": "^26.5.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "10.4.0",
    "mini-css-extract-plugin": "^1.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "prettier": "^2.1.2",
    "prettier-eslint": "^11.0.0",
    "react-app-polyfill": "^1.0.6",
    "react-test-renderer": "16.13.1",
    "rimraf": "3.0.2",
    "style-loader": "^2.0.0",
    "stylelint": "^13.2.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-standard": "^20.0.0",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.5",
    "typescript": "^4.0.3",
    "url-loader": "4.1.1",
    "webpack": "^4.44.2",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
